					<groupId>net.sf.taverna.t2.ui-activities</groupId>
					<artifactId>apiconsumer-activity-ui</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sf.taverna.t2.ui-activities</groupId>

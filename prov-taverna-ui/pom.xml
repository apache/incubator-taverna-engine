			<groupId>net.sf.taverna.t2.taverna-workbench</groupId>
			<artifactId>workbench-dev</artifactId>
			<version>${t2.workbench.version}</version>
			<scope>test</scope>

			<exclusions>
				<exclusion>
					<groupId>com.sun</groupId>
					<artifactId>tools</artifactId>
				</exclusion>
